.with-icon 
  .pro-popover__item
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    padding: 10px 0

  .pro-popover__item__content
    font-family: PingFangSC-Regular
    font-size: 16px
    color: #666666
    letter-spacing: 0
    line-height: 16px
    margin-left: 10px

.pro-popover__item+.pro-popover__item
  border-top: 1px solid #eeeeee

